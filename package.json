{
  "name": "tgs-debug-app",
  "version": "0.0.0",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "ng build --base-href ./ && electron .",
    "pack": "ng build --base-href ./ && electron-builder --dir",
    "dist": "ng build --prod --base-href ./ && electron-builder"
  },
  "build": {
    "appId": "app.testif",
    "productName": "TGS debug application",
    "mac": {
      "category": "test.category"
    },
    "files": [
      "dist/tgs-debug-app",
      "main.js",
      "!dist/tgs-debug-app/assets"
    ],
    "extraFiles": [
      {
        "from": "dist/tgs-debug-app/assets",
        "to": "assets"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.2.8",
    "@angular/cdk": "^7.3.3",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/forms": "~7.2.0",
    "@angular/material": "^7.3.3",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/router": "~7.2.0",
    "@types/electron": "^1.6.10",
    "core-js": "^2.5.4",
    "ngx-electron": "^2.1.1",
    "ngx-perfect-scrollbar": "^7.2.1",
    "rxjs": "~6.3.3",
    "tgs-core": "file:../tgs-core",
    "tgs-model": "file:../tgs-model",
    "tgs-parser": "file:../tgs-parser",
    "tslib": "^1.9.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular/cli": "~7.3.3",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/language-service": "~7.2.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.5.0",
    "electron": "^4.1.2",
    "electron-builder": "^20.39.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~3.2.2"
  }
}
